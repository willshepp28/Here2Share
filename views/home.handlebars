                <p><strong>Description:</strong> {{description}}</p>
                <p><strong>Price:</strong> ${{price}} per day</p>
                <p><strong>Product Owner: </strong>{{_productOwner.username}}</p>
                {{#if isAvailable}}
                <p class="text-center red">Product is not Available</p>
                    
                {{else}}
                    <p class="text-center lightgreen">Product is Available</p>
                {{/if}}

                
            </div>
            {{/each}}
        </section>
    </section>
</main>